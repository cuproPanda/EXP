<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>


	<RecipeDef>
		<defName>EXP_InsulateCable</defName>
		<label>make insulated cable</label>
		<description>Shape copper into a cable and insulate it using rubber.</description>
		<jobString>Insulating.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<workAmount>500</workAmount>
		<soundWorking>Recipe_Machining</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>EXP_Copper</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>EXP_Rubber</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<EXP_InsulatedCable>10</EXP_InsulatedCable>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>EXP_Copper</li>
				<li>EXP_Rubber</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>EXP_Copper</li>
				<li>EXP_Rubber</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
			<li>FueledSmithy</li>
			<li>ElectricSmithy</li>
		</recipeUsers>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>EXP_InsulatedCable</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>EXP_FuseQuartz</defName>
