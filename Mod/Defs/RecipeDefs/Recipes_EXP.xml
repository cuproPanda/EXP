						<li>EXP_RawRubber</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<EXP_Rubber>5</EXP_Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>EXP_RawRubber</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
