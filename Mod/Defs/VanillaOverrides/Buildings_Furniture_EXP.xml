<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

    <ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
        <DesignationCategory>Furniture</DesignationCategory>
        <minifiedDef>MinifiedFurniture</minifiedDef>
        <tradeTags>
            <li>Furniture</li>
        </tradeTags>
    </ThingDef>

    <ThingDef Name="HighQualityFurnitureBase" ParentName="BuildingBase" Abstract="True">
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Art">
                <nameMaker>ArtName_Furniture</nameMaker>
                <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
        </comps>
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>
        <DesignationCategory>Furniture</DesignationCategory>
        <minifiedDef>MinifiedFurniture</minifiedDef>
    </ThingDef>


    <!--============================== Beds ==============================-->




    <ThingDef ParentName="FurnitureBase">
        <defName>HospitalBed</defName>
        <label>hospital bed</label>
        <Description>A bed specially designed for injured people. Improves chance of successful medical work.</Description>
        <ThingClass>Building_Bed</ThingClass>
        <graphicData>
            <texPath>Things/Building/Furniture/Bed/HospitalBed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(3,4)</drawSize>
        </graphicData>
        <AltitudeLayer>Building</AltitudeLayer>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>2850</WorkToMake>
            <Flammability>1.0</Flammability>
            <BedRestEffectiveness>1</BedRestEffectiveness>
            <Comfort>0.80</Comfort>
            <ImmunityGainSpeedFactor>1.144</ImmunityGainSpeedFactor>
            <MedicalTreatmentQualityFactor>1.04</MedicalTreatmentQualityFactor>
        </statBases>
        <Size>(1,2)</Size>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>40</costStuffCount>
        <costList>
            <Steel>20</Steel>
            <CP_Copper>20</CP_Copper>
            <CP_Rubber>20</CP_Rubber>
            <Medicine>5</Medicine>
        </costList>
        <building>
            <Bed_ShowSleeperBody>False</Bed_ShowSleeperBody>
            <Bed_HealTickInterval>1950</Bed_HealTickInterval>
            <bed_defaultMedical>true</bed_defaultMedical>
        </building>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>VitalsMonitor</li>
                </linkableFacilities>
            </li>
        </comps>
        <fillPercent>0.4</fillPercent>
        <PathCost>60</PathCost>
        <LeaveResourcesWhenKilled>True</LeaveResourcesWhenKilled>
        <StaticSunShadowHeight>0.17</StaticSunShadowHeight>
        <CastEdgeShadows>True</CastEdgeShadows>
        <designationHotkey>Misc5</designationHotkey>
        <Passability>PassThroughOnly</Passability>
        <DrawGUIOverlay>True</DrawGUIOverlay>
        <researchPrerequisites>
            <li>HospitalBed</li>
        </researchPrerequisites>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
    </ThingDef>


    <!-- ======================== Lighting ======================= -->


    <ThingDef Name="LampBase" ParentName="BuildingBase" Abstract="True">
        <thingClass>Building</thingClass>
        <category>Building</category>
        <minifiedDef>MinifiedFurniture</minifiedDef>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <selectable>true</selectable>
        <fillPercent>0.20</fillPercent>
        <pathCost>8</pathCost>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
        <designationCategory>Furniture</designationCategory>
        <rotatable>false</rotatable>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <shadowData>
                <volume>(0.3, 0.6, 0.3)</volume>
                <offset>(0,0,-0.1)</offset>
            </shadowData>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
        </graphicData>
        <comps>
            <li Class="CompProperties_Flickable"/>
        </comps>
        <statBases>
            <MaxHitPoints>50</MaxHitPoints>
            <WorkToMake>170</WorkToMake>
            <Flammability>1.0</Flammability>
        </statBases>
    </ThingDef>

    <ThingDef Name="StandingLampBase" ParentName="LampBase" Abstract="True">
        <graphicData>
            <texPath>Things/Building/Furniture/LampStanding</texPath>
        </graphicData>
        <costList>
            <Steel>5</Steel>
            <CP_Copper>5</CP_Copper>
            <CP_Glass>1</CP_Glass>
        </costList>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>75</basePowerConsumption>
                <shortCircuitInRain>false</shortCircuitInRain>
            </li>
        </comps>
    </ThingDef>


